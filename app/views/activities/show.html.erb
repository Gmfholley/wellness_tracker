     <div class="row">
       <div class="col s8 offset-s2 m3 picture-column">
         <div class="section">
           <img class="responsive-img circle" src="http://www.pageresource.com/wallpapers/wallpaper/cats-cute-cat-animal-cute-grass-photo.jpg"></img>
         </div>
       </div>
       <div class="col s12 m9 text-column">
         <div class="username">
           <h5 class="center-on-small-only"><%= "#{@activity.user.first_name} #{@activity.user.last_name}" %></h5>
           <p class="grey-text condensed center-on-small-only small-font"><time datetime="<%= @activity.date %>"><%= "#{time_ago_in_words(@activity.date)} ago" %></time></p>
         </div>
         <div class="divider"></div>
         <div class="section">
           <p><%= "#{@activity.user.first_name} did #{@activity.exercise_type.name} at #{@activity.intensity.name} intensity for #{@activity.num_units} #{@activity.exercise_unit.name}" %></p>
         
         
          <div class="react-buttons">
            <span class="grey-text small-font tooltipped", data-position="bottom", data-delay="50", data-tooltip="<%= "#{@activity.cheers.map {|r| r.user.username}}"%>"><%= cheer_sentence(@activity.cheers) %></span>
            <%# TODO - Put the names of the cheerers in something other than an array %>         
            <span> 
              <% if @activity.user_has_cheered?(@user) %>
                 <%= link_to '<i class="material-icons added">favorite</i>'.html_safe, activity_cheers_path(@activity.id), method: "delete", class: "right" %>
               <% else %>
                 <%= link_to '<i class="material-icons">favorite</i>'.html_safe, activity_cheers_path(@activity.id), method: "post", class: "right" %>
               <% end %>
            </span>
         </div>
        </div>
      </div>
    </div>
      <div class="divider"></div>
    <div class="row">
      <% @activity.comments.each do |comment| %>
        <div class="comment">
            <div class="section">
              <div class="row">
                <div class="col s4 m3 center-align">
                  <img class="responsive-img circle" src="http://www.pageresource.com/wallpapers/wallpaper/cats-cute-cat-animal-cute-grass-photo.jpg"></img>
                </div>
                
                <div class="col s8 m9">
                  <div class="row">
                    <p><span class="bold"><%= "#{comment.user.first_name} #{comment.user.last_name}" %></span> says...</p>
                    <%#Add material icons for editing and deleting here (edit and remove trash?)  %>
                    <%= link_to '<i class="material-icons">edit</i>'.html_safe, "/some path", method: "post" %>
                  </div>
                  <p><%= comment.content %></p>
                  <span class="grey-text small-font"><%= "#{time_ago_in_words(comment.updated_at)} ago" %></span>
                </div>
              </div>
            </div>
            <div class="divider"></div>
          </div>
      <% end %>
      
      <div class="comment">
            <div class="section">
              <div class="row">
                <div class="col s4 m3 center-align">
                  <img class="responsive-img circle" src="http://www.pageresource.com/wallpapers/wallpaper/cats-cute-cat-animal-cute-grass-photo.jpg"></img>
                </div>
                
                <div class="col s8 m9">
                  <% @comment = @activity.comments.build %>
                  <%= render :partial => "/comments/form", locals: {:comment => @comment } %>
                </div>
              </div>
            </div>
            <div class="divider"></div>
          </div>
          
</div>


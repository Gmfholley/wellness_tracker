<p id="notice"><%= notice %></p>

<h1>Listing Exercise Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Exercise type</th>
      <th>Intensity</th>
      <th>Length of Exercise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_events.each do |exercise_event| %>
      <tr>
        <td><%= exercise_event.date %></td>
        <td><%= exercise_event.user.first_name %></td>
        <td><%= exercise_event.exercise_type.name %></td>
        <td><%= exercise_event.intensity.name %></td>
        <td><%= "#{exercise_event.num_units} #{exercise_event.exercise_unit.name}" %></td>
        <td><%= link_to 'Show', exercise_event %></td>
        <td><%= link_to 'Edit', edit_exercise_event_path(exercise_event) %></td>
        <td><%= link_to 'Destroy', exercise_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


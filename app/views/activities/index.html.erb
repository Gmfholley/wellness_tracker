<p id="notice"><%= notice %></p>

<h1 class="center-align grey">Listing Exercise Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Exercise type</th>
      <th>Intensity</th>
      <th>Length of Exercise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.date %></td>
        <td><%= activity.user.first_name %></td>
        <td><%= activity.exercise_type.name %></td>
        <td><%= activity.intensity.name %></td>
        <td><%= "#{activity.num_units} #{activity.exercise_unit.name}" %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


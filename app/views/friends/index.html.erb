
<h3><%= @message %></h3>
      <div class="row">
<% @users.each do |user| %>

        <div class="col s12 m6 l4">
          <div class="card darken-1">
            <div class="card-content black-text">
              <span class="card-title black-text"><%= "#{user.first_name} #{user.last_name}" %></span>
              <p>I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively.</p>
              <%# TODO - display organizations %>
              <%# TODO - display team information %>
            </div>
            <div class="card-action">
              <a href="<%= user_path(user.username) %>"><i class="material-icons">person</i>Profile</a>
              <% if @user.friends.exists?(user) %>
                <%= link_to "Friend", friend_path(user.id), method: "delete", class: "tooltipped", "data-position": "bottom", "data-delay": "50", "data-tooltip": "Click to unfriend" %>
              <% else %>
                <%= link_to '<i class="material-icons">add</i>Send Friend Request'.html_safe, add_friend_path(user.id), method: "post", class: "tooltipped", "data-position": "bottom", "data-delay": "50", "data-tooltip": "Send Friend Request"  %>
              <% end %>              
            </div>
          </div>
        </div>

<% end %>
      </div>
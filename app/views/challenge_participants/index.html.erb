<p id="notice"><%= notice %></p>

<h1>Listing Challenge Participants</h1>

<table>
  <thead>
    <tr>
      <th>Challenge</th>
      <th>User</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@challenge_participants.nil? %>
    <% @challenge_participants.each do |challenge_participant| %>
      <tr>
        <td><%= challenge_participant.challenge_id %></td>
        <td><%= challenge_participant.user_id %></td>
        <td><%= challenge_participant.team_id %></td>
        <td><%= link_to 'Show', challenge_participant %></td>
        <td><%= link_to 'Edit', edit_challenge_participant_path(challenge_participant) %></td>
        <td><%= link_to 'Destroy', challenge_participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>


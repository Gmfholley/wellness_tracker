<!DOCTYPE html>
<html>
<head>
  <title>WellnessTracker</title>
  
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag    'https://fonts.googleapis.com/icon?family=Material+Icons', media: 'all'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper" class="right">
        <span class="brand-logo">
          <a class="brand-logo" href="#"><i class="material-icons brand-logo">terrain</i></a>
        </span>
        <ul id="nav-mobile" class="right hide-on-small-only">
          <% if current_user %>
            <li><%= link_to "Edit Profile", edit_profile_path %></li>
            <li><%= link_to "Logout", :logout, method: :delete %></li>
          <% else %>
            <li><%= link_to "Register", new_user_path %></li>
            <li><%= link_to "Login", :login %></li>
          <% end %>
        </ul>
        <i class="material-icons dropdown-button hide-on-med-and-up" data-activates='main-menu' data-hover="true" data-beloworigin="true">menu</i>
        <ul id="main-menu" class="dropdown-content hide-on-med-and-up">    
          <% if current_user %>
            <li><%= link_to "Edit Profile", edit_profile_path %></li>
            <li><%= link_to "Logout", :logout, method: :delete %></li>
          <% else %>
            <li><%= link_to "Register", new_user_path %></li>
            <li><%= link_to "Login", :login %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>
  </div>
  <div class="container">
  <%= yield %>
  </div>
  <div class="scripts">  
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'materialize' %>
    <%= javascript_include_tag 'materialize.min' %>
  </div>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>WellnessTracker</title>
  <%= stylesheet_link_tag    'https://fonts.googleapis.com/icon?family=Material+Icons', media: 'all'%>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css', media: 'all'%>
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', media: 'all'%>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      
      <div class="nav-wrapper" class="pull-right">
        <span class="brand-logo">
          <a class="brand-logo" href="#"><i class="material-icons brand-logo">terrain</i></a>
        </span>
        <ul id="nav-mobile" class="pull-right hidden-sm hidden-xs">
          <% if current_user %>
            <li><%= link_to "Edit Profile", edit_profile_path %></li>
            <li><%= link_to "Logout", :logout, method: :delete %></li>
          <% else %>
            <li><%= link_to "Register", new_user_path %></li>
            <li><%= link_to "Login", :login %></li>
          <% end %>
        </ul>
        <i class="material-icons dropdown-button hidden-md hidden-lg" data-activates='main-menu' data-hover="true" data-beloworigin="true">menu</i>
        <ul id="main-menu" class="dropdown-content hidden-md hidden-lg">    
          <% if current_user %>
            <li><%= link_to "Edit Profile", edit_profile_path %></li>
            <li><%= link_to "Logout", :logout, method: :delete %></li>
          <% else %>
            <li><%= link_to "Register", new_user_path %></li>
            <li><%= link_to "Login", :login %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>
  </div>
  <div class="container">
  <%= yield %>
  </div>
  <div class="scripts">  
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js'%>
    
  </div>
</body>
</html>

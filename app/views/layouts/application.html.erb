<!DOCTYPE html>
<html>
<head>
  <title>WellnessTracker</title>
  <%= stylesheet_link_tag    'https://fonts.googleapis.com/icon?family=Material+Icons', media: 'all'%>
  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css', media: 'all'%>
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', media: 'all'%>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      
      <div class="nav-header">
        <span class="navbar-brand">
          <a class="Brand" href="#"><i class="material-icons brand-logo">terrain</i></a>
        </span>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#my-navbar" aria-expanded="false">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="my-navbar">
        <ul id="main-menu" class="nav navbar-nav">    
          <% if current_user %>
            <li><%= link_to "Profile", profile_path %></li>
            <li><%= link_to "Activities", activities_path %></li>
            <li><%= link_to "Friends", friends_path %></li>
            <li><%= link_to "Challenges", challenges_path %></li>
            <li><%= link_to "Logout", :logout, method: :delete %></li>            
          <% else %>
            <li><%= link_to "Register", new_user_path %></li>
            <li><%= link_to "Login", :login %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>
  </div>
  <div class="container">
  <%= yield %>
  </div>
  <div class="scripts">  
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js'%>
    
  </div>
</body>
</html>
